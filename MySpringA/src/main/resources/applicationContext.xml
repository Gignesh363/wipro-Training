<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bankBean" class="com.example.constructor.Bank">
        <constructor-arg value="1001"/>
        <constructor-arg value="HDFC Bank"/>
    </bean>

    <bean id="accountBean" class="com.example.constructor.Account">
        <constructor-arg value="2001"/>
        <constructor-arg value="John Doe"/>
        <constructor-arg value="15000.0"/>
        <constructor-arg ref="bankBean"/>
    </bean>
</beans>
